
{% if students is defined%}
    <div class="col-md-1  table-responsive">
    </div>
    <div class="col-md-10  table-responsive">
        
        
                        
        <table class="table table-bordered table-hover table-sortable" id="tab_logic">

            <thead>
                <tr>
                    <th style="width:10%;" class="text-center">Matricule</th>
                    <th style="width:30%;" class="text-center" >Nom et pr√©nom</th>
                    <th style="width:20%;" class="text-center" >Heures d'abscence</th>
                    <th style="width:10%;" class="text-center" >Justifiee?</th>
                    <th style="width:30%;" class="text-center" >Raison</th>
                </tr>
            </thead>
            
            <tbody>

                {%for student in students%}
                    <tr id='addr0' data-id="0" class="hidden">
                        <td data-name="name">
                            {{student.matricule}}
                        </td>
                        <td data-name="name">
                            {{student.lastname}} {{student.firstname}}
                        </td>
                        <td data-name="desc">
                            <input type="number" id="{{student.matricule}}"  placeholder="0...100"
                                   min="0" max="100" class="form-control value" name="{{student.matricule}}note"/>
                        </td>
                        <td data-name="desc">
                            <input type="checkbox" value=false placeholder="Justifiee" class="form-check-input mt-0 justification" name="{{student.matricule}}just"/>
                        </td>
                        <td data-name="desc">
                            <input type="text" placeholder="Raison" class="form-control" value="RAS" name="{{student.matricule}}raison" />
                        </td>
                    </tr>
                {% endfor %}

            </tbody>

        </table>
    </div>
    <div class="col-md-1  table-responsive">
    </div>
{% endif %}
{% block javascripts %}

    <script type="text/javascript" src="{{ asset('assets/js/jquery.js') }}"></script>
    <script type="text/javascript" >
        
        $(function () {
            
            $("td input.form-check-input").change(function () {
                  
                $(this).parent().children().last().prop('disabled', !this.checked);
              //  console.log( $(this).next().children());
            });
        });
    </script>
{% endblock javascripts %}