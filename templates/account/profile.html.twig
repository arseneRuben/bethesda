{% extends "layout/backEndLayout.html.twig" %}



{% block content %}
<div class="row">
 	<div class="col-md-6 mx-auto text-center">
 		<p>
			<h1 class="my-5">  Profil utilisateur</h1>
		</p>

	</div>
</div>
 <div class="container bootstrap snippets bootdey">
    <div class="profile card">
        <div class="profile-body">
            <div class="profile-bio">
                <div class="row">
                    <div class="col-md-2 text-center">
                       <img src="{{ app.user.avatar(75) }}" class="shadow rounded-circle img-thumbnail md-margin-bottom-10"  alt=" {{app.user.fullName}}  " />
                    
                    </div>
                      <div class="col-md-10">
                       
						<p  class="pd-2 pb-2 text-muted lead" >   {{app.user.email}}</p>
						  <p  class="pd-2 pb-2 text-muted" > <small><i> &#8986;</i> Account created on  {{app.user.createdAt|date('d/m/y') }}</small></p>
						<span><strong>Full teacher off:{{ mainTeacher is null ?  "" :  mainTeacher.classRoom.name   }}
						<div class="btn-group">
							  
						</div>
                        <hr>
                        <p>
                  <a  href="{{path('admin_account_edit')}}">Edit account </a>
                  {# |<a class="btn btn-warning" href="{{path('admin_account_changepwd')}}"> Change password </a>  #} 
                </p>
                    </div>
                </div>    
            </div>
    	</div>
    </div>
    <div class="row">
 	<div class="col-md-6 mx-auto text-center">
 		<p>
			<h2 class="my-5">  Attributions de cours de l'annee scolaire en cours</h2>
		</p>

	</div>
</div>
    <div>
         <table class="table table-responsive table-borderless">
        
            <thead>
                <tr class="bg-light">
               
                <th scope="col" width="20%">Date</th>
                <th scope="col" width="10%">Classe</th>
                <th scope="col" width="20%">Unite</th>
                
                </tr>
            </thead>
            <tbody>
                {% for att in attributions %}
                <tr>
                    
                    <td>{{ att.schoolYear.code}}</td>
                    <td><i class="fa fa-check-circle-o green"></i><span class="ms-1">{{att.course.module.room.name}}</span></td>
                    <td>{{att.course.wording}}</td>
                 
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div> 
{% endblock %}
