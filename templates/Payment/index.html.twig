{% extends 'layout/backEndLayout.html.twig' %}


{% block content %}
        
    <div class="row mt-4">
            <div class="col-1" >
                <a class="btn btn-info" href="{{ path('app_payment_new') }}">
                    <i class="fa fa-plus"></i> 
                </a>
            </div>
            <div class="col-11 jumbotron" >
            <div class="m-1 box-shadow">
                    <div class="card-header">
                         <h4 class="my-0 font-weight-normal text-center text-justify text-uppercase"> Liste des payements effectuees </h4>
                    </div>
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>CreatedAt</th>
                                <th>UpdatedAt</th>
                                <th>Amount</th>
                                <th>actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for payment in payments %}
                            <tr>
                                <td>{{ payment.id }}</td>
                                <td>{{ payment.createdAt ? payment.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                                <td>{{ payment.updatedAt ? payment.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                                <td>{{ payment.amount }}</td>
                                <td>
                                    <a href="{{ path('app_payment_show', {'id': payment.id}) }}">show</a>
                                    <a href="{{ path('app_payment_edit', {'id': payment.id}) }}">edit</a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="5">no records found</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
            </div>
            
        </div>

{% endblock %}
