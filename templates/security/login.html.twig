{% extends 'layout/frontEndLayout.html.twig' %}

{% block title %}Bethesda Sign in {% endblock %}

{% block body %}
<div class="container-fluid px-1 px-md-5 px-lg-1 px-xl-5 py-5 mx-auto">
    <div class=" border-0">
        <div class="row d-flex">
            <div class="col-lg-6">
                <div class="card1 pb-5">
                   <div class="row"> <img  src="{{ asset('assets/images/logo2.png') }}" class="logo"> </div>
                    <div class="row px-3 justify-content-center mt-4 mb-5 border-line"> <img src="{{ asset('assets/images/BethesdaLogo.gif') }}" class="image"> </div>
                </div>
            </div>
            <div class="col-lg-6">
                {% if error %}
                <div class="alert alert-danger">{{ error.message }}</div>
                {% endif %}
                <div class="card2 card border-0 px-4 py-5">

                    <!--<div class="row mb-4 px-3">
                        <h6 class="mb-0 mr-4 mt-2">Sign in with</h6>
                        <div class="facebook text-center mr-3">
                            <div class="fa fa-facebook"></div>
                        </div>
                        <div class="twitter text-center mr-3">
                            <div class="fa fa-twitter"></div>
                        </div>
                        <div class="linkedin text-center mr-3">
                            <div class="fa fa-linkedin"></div>
                        </div>
                    </div>
                    <div class="row px-3 mb-4">
                        <div class="line"></div> <small class="or text-center">Or</small>
                        <div class="line"></div>
                    </div> -->
                    <form  method="post" action="{{ path('app_login') }}" role="form" class="form-horizontal">
                        <div class="row px-3"> <label class="mb-1">
                                <h6 class="mb-0 text-sm">Email Address</h6>
                            </label> <input class="mb-4" id="email"  autocomplete="email"  name="email" placeholder="Enter a valid email" type="email" value="{{ last_username }}" required autofocus </div>
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                        <div class="row px-3"> <label class="mb-1">
                                <h6 class="mb-0 text-sm">Password</h6>
                            </label> <input  type="password" name="password" placeholder="password" id="password" autocomplete="current-password" required> </div>
                        <div class="row px-3 mb-4">
                            <div class=" col-sm-4 form-group custom-control custom-checkbox custom-control-inline"> 
                                <input id="remember_me" type="checkbox" name="_remember_me" class="custom-control-input"> 
                                <label for="remember_me" class="custom-control-label text-sm">Remember me</label> 
                            </div> 
                            <div class="col-sm-4"> <button type="submit" class=" fw-bold text-uppercase btn btn-blue text-center">Login</button> </div>
                            <div class="col-sm-4">
                                <a href="{{ path('app_forgot_password_request') }}"  type="submit"  class="btn btn-warning btn-sm">Forgot Password?</a>
                            </div>
                        </div>
                    
                        <div class="form-group">						
                                    <div class="col-sm-6 alert alert-warning text-center" role="alert"> <small class="font-weight-bold">Don't have an account? <a  class="alert-link btn" href="{{ path('app_register')}}">Register</a></small> </div>
                        </div>

              
              
              
                
                </form>
                </div>
            </div>
        </div>
       
    </div>
</div>

{% endblock %}