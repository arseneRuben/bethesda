<!DOCTYPE html>

<title>Abscence index</title>

{% block body %}
    <h1>Abscence index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>StartDate</th>
                <th>EndDate</th>
                <th>Reason</th>
                <th>Justified</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for abscence in abscences %}
            <tr>
                <td>{{ abscence.id }}</td>
                <td>{{ abscence.startDate ? abscence.startDate|date('Y-m-d') : '' }}</td>
                <td>{{ abscence.endDate ? abscence.endDate|date('Y-m-d') : '' }}</td>
                <td>{{ abscence.reason }}</td>
                <td>{{ abscence.justified ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_abscence_show', {'id': abscence.id}) }}">show</a>
                    <a href="{{ path('app_abscence_edit', {'id': abscence.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_abscence_new') }}">Create new</a>
{% endblock %}
