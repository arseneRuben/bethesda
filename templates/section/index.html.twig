{% extends 'layout/backEndLayout.html.twig' %}



{% block content %}
  
     <div class="row mt-4">
            <div class="col-1" >
                <a class="btn btn-info" href="{{ path('admin_sections_new') }}">
                    <i class="fa fa-plus"></i> 
                </a>
            </div>
             <div class="col-11 jumbotron" >
                 <div class="m-1 box-shadow">
                    <div class="card-header">
                         <h4 class="my-0 font-weight-normal text-center text-justify text-uppercase"> Liste des sections configurees </h4>
                    </div>
                <table  width="100%" class="table table-striped">
                    <thead>
                        <tr>
                            <th style="width:15%;" class="text-center" scope="col">#</th>
                             <th style="width:40%;" class="text-center" scope="col">Programme</th>
                            <th style="width:40%;" class="text-center" scope="col">Section</th>
                            <th style="width:45%;" class="text-center" scope="col">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for section in sections %}
                            <tr>
                                <td style="width:15%;" class="text-center" scope="row">{{ loop.index }}</th>
                                 <td style="width:15%;" class="text-center" ><a href="{{ path('admin_programs_show', {id: section.program.id}) }}"><h3>{{ section.program.name }}</h3></a></td>
                             
                                <td style="width:15%;" class="text-center" ><a href="{{ path('admin_sections_show', {id: section.id}) }}"><h3>{{ section.name }}</h3></a></td>
                             
                                
                                <td style="width:15%;" class="text-center">
                                    <div class="btn-group">
                                        
                                         <a class="btn btn-outline-info " href="{{ path('admin_sections_show', {id: section.id}) }}">
                                                <i class="fa fa-eye"></i> 
                                            </a>
                                        <a class="btn btn-outline-warning" href="{{path('admin_sections_edit', {id: section.id})}}"> <i class="fa fa-edit" aria-hidden="true"></i>

                                         
                                        </a>
                                          
                                       
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
            
        </div>
   
{% endblock %}
