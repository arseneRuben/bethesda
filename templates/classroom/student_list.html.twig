                                {% endif %}
                            </b>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    {% for std in students %}
                        <tr>
                            <td class="qty">
                                {{ loop.index }}
                            </td>
                            <td class="qty">
                                {{ std.matricule }}
                            </td>
                            <td class="desc">
                                <b>
                                    {{ std.lastname }}
                                    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;  
                                                                                                                                                
                                                                                                            
                                                                        
                                    {{ std.firstname }}
                                </b>

                            </td>
                            <td class="qty">
                                {% if std.gender %}
                                    F
                                                                                                                                            
                                                                                                        
                                                                    
                                {% else %}
                                    M 
                                                                                                                                            
                                                                                                        
                                                                    
                                {% endif %}
                            </td>
                            <td class="qty">
                                {% if std.birthday %}
                                    {{ std.birthday|date('d-m-Y') }}
                                {% endif %}
                            </td>
                            <td class="qty">
                                {{ std.birthplace }}
                            </td>
