{% extends "layout/layout.html.twig" %}
{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('assets/css/pdf.css') }}" rel="stylesheet" type="text/css" />
{% endblock stylesheets %}
{% block title %}
    Rapport de dépot des fiches de notes
{% endblock %}

{% block content %}

    <div class="example-wrapper">
        <h1 class="center">
            Rapport de dépot des fiches de notes en 
            {{ room.name }}
        </h1>
        <div class="row" style="margin : 2%;">

            <table class="table table-bordered">
                <thead>

                    <tr>
                        {% set totalCoef = 0 %}
                        <th class="rotate">
                            <div style="text-align:right;">
                                <span>
                                    <b>
                                        SEQ N°
                                    </b>
                                </span>
                            </div>
                        </th>

                        {% for course in  courses %}
                            {% set totalCoef = totalCoef + course.coefficient %}
                            <th class="rotate">
                                <div>
                                    <span>
                                        <b>
                                            &nbsp;&nbsp;&nbsp;
                                            {{ course.code }}
                                            &nbsp;&nbsp;&nbsp; 
                                        </b>
                                    </span>
                                </div>
                            </th>
                        {% endfor %}

                    </tr>

                </thead>
                <tbody>

                    {% for key, values in evaluations %}
                        <tr>

                            <td class="val">
                                <b>
                                    {{ loop.index }}
                                </b>
                            </td>
                            {% for val in  values %}
                                <td style="text-align:center;">
                                    {{ val }}
                                </td>
                            {% endfor %}

                        </tr>
                    {% endfor %}

                </tbody>
            </table>

        </div>
    </div>
{% endblock %}
