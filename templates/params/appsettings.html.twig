{% extends 'layout/backEndLayout.html.twig' %}


{% block content %}

	<div class=" container pt-5 row mt-2">
			<div class="col-md-6 mx-auto">
				<article class="text-center">
					<br/>
					<div class="card-header">
						<h4 class="my-0 font-weight-normal text-center text-justify text-uppercase">
							Paramètres de l'Etablissement</h4>
					</div>
					<form class= "rounded-top border border-primary bg-light p-2">
						<div class="form-group mb-3">
							<label for="inputSchoolName">Nom de l'Etablissement</label>
							<input type="text" class="form-control" id="inputSchoolName" placeholder="Nom de l'établissement">
						</div>
						<div class="form-group input-group mb-3">
							<div class="input-group-prepend">
								<button class="btn btn-outline-secondary" type="button">Logo de l'Etablissement</button>
							</div>
							<div class="custom-file">
								<input type="file" class="custom-file-input" id="inputGroupFile03">
								<label class="custom-file-label" for="inputGroupFile03">Choisir le fichier</label>
							</div>
						</div>
						<button type="submit" class="btn btn-primary">Enregistrer</button>
					</form>
				</article>
		</div>
	</div>


{% endblock %}
